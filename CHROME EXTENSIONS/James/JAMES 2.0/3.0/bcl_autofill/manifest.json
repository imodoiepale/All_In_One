{
    "manifest_version": 3,
    "name": "BCL Jaza 2.0 ",
    "version": "1.0",
    "description": "BCL Tool for Form Filling",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "index.html",
        "default_icon":"BCL-LOGO.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./src/app.jsx"
            ]
        }
    ],
    "icons": {
        "16": "BCL-LOGO.png",
        "48": "BCL-LOGO.png",
        "128": "BCL-LOGO.png"
    }
}
